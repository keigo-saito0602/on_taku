<%= form_with model: event, data: { controller: "fee-calculator" }, html: { class: "space-y-6" } do |form| %>
  <% if event.errors.any? %>
    <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
      <p class="font-semibold">入力内容にエラーがあります。</p>
      <ul class="mt-2 list-disc pl-5">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "イベント名", class: "block text-sm font-medium text-slate-700" %>
    <%= form.text_field :name, required: true, class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200" %>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :event_date, "開催日", class: "block text-sm font-medium text-slate-700" %>
      <%= form.date_field :event_date, required: true, class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200" %>
    </div>
    <div>
      <%= form.label :venue, "開催場所", class: "block text-sm font-medium text-slate-700" %>
      <%= form.text_field :venue, required: true, class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200" %>
    </div>
  </div>

  <fieldset class="rounded-xl border border-slate-200 bg-white p-5">
    <legend class="px-2 text-sm font-semibold text-slate-700">料金内訳（円）</legend>
    <div class="mt-4 grid gap-4 md:grid-cols-2">
      <div>
        <%= form.label :event_fee, "イベント料", class: "block text-sm font-medium text-slate-700" %>
        <%= form.number_field :event_fee,
              in: 0..50_000,
              step: 100,
              class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200",
              data: { action: "input->fee-calculator#recalculate", fee_calculator_target: "eventFee" } %>
      </div>
      <div>
        <%= form.label :drink_fee, "ドリンク", class: "block text-sm font-medium text-slate-700" %>
        <%= form.number_field :drink_fee,
              in: 0..50_000,
              step: 100,
              class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200",
              data: { action: "input->fee-calculator#recalculate", fee_calculator_target: "drinkFee" } %>
      </div>
    </div>
    <p class="mt-3 rounded-md bg-slate-100 px-3 py-2 text-sm font-semibold text-slate-700">
      合計: <span data-fee-calculator-target="total"><%= number_with_delimiter(event.event_fee.to_i + event.drink_fee.to_i) %></span> 円
    </p>
  </fieldset>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :door_time, "開場時刻", class: "block text-sm font-medium text-slate-700" %>
      <%= form.time_field :door_time, class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200" %>
    </div>
    <div>
      <%= form.label :start_time, "開演時刻", class: "block text-sm font-medium text-slate-700" %>
      <%= form.time_field :start_time, class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200" %>
    </div>
  </div>

  <div>
    <%= form.label :description, "説明", class: "block text-sm font-medium text-slate-700" %>
    <%= form.text_area :description, rows: 5, class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-200" %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "キャンセル", event.persisted? ? event : events_path, class: "inline-flex items-center rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50" %>
    <%= form.submit class: "inline-flex items-center rounded-lg bg-sky-600 px-5 py-2 text-sm font-semibold text-white shadow transition hover:bg-sky-500" %>
  </div>
<% end %>
