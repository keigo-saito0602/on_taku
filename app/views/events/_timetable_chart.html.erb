<% slots = timetable.timetable_slots.includes(:artist).order(:start_time) %>
<% if slots.blank? %>
  <div class="rounded-2xl border border-dashed border-slate-300 bg-slate-50 p-6 text-sm text-slate-500">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-base font-semibold text-slate-700"><%= timetable.stage_name %></h3>
        <p class="mt-1 text-xs">タイムテーブルが登録されていません。</p>
      </div>
      <% if defined?(show_edit) && show_edit %>
        <%= link_to "タイムテーブルを編集", edit_timetable_event_path(@event), class: "text-xs font-semibold text-sky-600 hover:text-sky-500" %>
      <% end %>
    </div>
  </div>
<% else %>
  <% window_start, window_end = timeline_window(slots) %>
  <% step_minutes = 5 %>
  <% layout = grid_layout_for_slots(slots, window_start:, window_end:, step_minutes:) %>
  <% row_count = layout[:row_count] %>
  <% col_count = layout[:column_count] %>

  <% modal_dom_id = dom_id(timetable, :artist_modal) %>
  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm" data-controller="artist-modal" data-artist-modal-body-class="overflow-hidden">
    <div class="flex items-center justify-between pb-4">
      <h3 class="text-base font-semibold text-slate-800"><%= timetable.stage_name %></h3>
    </div>
    <div class="relative">
      <div class="grid overflow-hidden rounded-xl border border-slate-200 bg-slate-50 p-4 text-xs text-slate-500"
           style="
             grid-template-columns: minmax(2.5rem, 4rem) repeat(<%= col_count %>, minmax(0,1fr));
             grid-template-rows: repeat(<%= row_count %>, minmax(12px, auto));
             gap: 0.5rem 0.5rem;
           ">
        <% row_count.times do |row_index| %>
          <% minute = window_start + row_index * step_minutes %>
          <% if (minute % 60).zero? %>
            <div class="select-none text-[11px] text-slate-400"
                 style="grid-column: 1 / span 1; grid-row: <%= row_index + 1 %>;">
              <%= format("%02d:%02d", minute / 60, minute % 60) %>
            </div>
          <% end %>
        <% end %>

        <% layout[:items].each do |item| %>
          <% slot = item[:slot] %>
          <% label, color = slot_label_and_color(slot) %>
          <article class="flex flex-col gap-2 overflow-hidden rounded-xl border border-slate-300 bg-white px-4 py-3 text-sm shadow-sm"
                   style="grid-column: <%= item[:column] + 2 %> / <%= item[:column] + 3 %>; grid-row: <%= item[:row_start] %> / <%= item[:row_end] %>;">
            <div class="flex flex-wrap items-start justify-between gap-2 text-xs font-semibold">
              <span class="inline-flex flex-wrap items-center gap-2 whitespace-nowrap">
                <span class="rounded-full px-2 py-0.5 text-[11px] font-semibold <%= color %>"><%= label %></span>
                <span class="font-mono text-slate-500"><%= slot.start_time.strftime("%H:%M") %> - <%= slot.end_time.strftime("%H:%M") %></span>
              </span>
              <% if slot.artist %>
                <%= link_to slot.artist.name,
                            "#",
                            class: "max-w-[45%] truncate text-sky-600 hover:text-sky-500",
                            data: {
                              action: "artist-modal#open",
                              artist_modal_payload_value: artist_modal_payload(slot.artist)
                            } %>
              <% end %>
            </div>
            <% if slot.note.present? %>
              <button type="button"
                      class="group relative w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-left text-xs text-slate-600 transition hover:border-sky-300 focus:outline-none focus:ring-2 focus:ring-sky-200"
                      data-action="artist-modal#open"
                      data-artist-modal-payload-value="<%= timetable_note_payload(slot) %>">
                <div class="flex items-center justify-between gap-2">
                  <span class="font-semibold text-slate-700">備考</span>
                  <span class="text-[11px] font-semibold text-sky-600 group-hover:underline">詳細を表示</span>
                </div>
                <div class="mt-1 max-h-16 overflow-hidden break-words text-[11px] leading-relaxed text-slate-600">
                  <%= truncate(slot.note.to_s, length: 80) %>
                </div>
              </button>
            <% end %>
            <% if !slot.changeover? && slot.artist.blank? %>
              <p class="text-xs font-semibold text-rose-600">出演者未定</p>
            <% end %>
          </article>
        <% end %>
      </div>
    </div>
    <div class="fixed inset-0 z-40 hidden bg-slate-900/50" data-artist-modal-target="backdrop" data-action="click->artist-modal#close"></div>
    <div class="fixed inset-0 z-50 hidden flex w-full px-4 py-8 sm:px-6" data-artist-modal-target="container">
      <div class="mx-auto flex h-full max-h-[80vh] w-[90vw] max-w-lg items-center justify-center sm:w-[640px]">
        <div class="flex w-full max-h-[80vh] flex-col overflow-hidden rounded-2xl border border-slate-300 bg-white shadow-2xl" role="dialog" aria-modal="true" aria-labelledby="<%= modal_dom_id %>-title" data-artist-modal-target="panel" tabindex="-1">
          <div class="flex items-center justify-between border-b border-slate-100 px-5 py-4">
            <h3 id="<%= modal_dom_id %>-title" class="text-lg font-semibold text-slate-900" data-artist-modal-target="title"></h3>
            <button type="button" class="text-xs font-semibold text-slate-400 transition hover:text-slate-600" data-action="artist-modal#close">×</button>
          </div>
          <div class="max-h-[80vh] overflow-auto px-5 py-4 text-sm text-slate-700" data-artist-modal-target="body"></div>
          <div class="flex items-center justify-end gap-3 border-t border-slate-100 px-5 py-4">
            <button type="button" class="rounded-lg border border-slate-300 px-3 py-2 text-sm font-semibold text-slate-600 transition hover:bg-slate-50" data-action="artist-modal#close">閉じる</button>
            <%= link_to "編集", "#",
                      class: "rounded-lg bg-sky-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-sky-500",
                      data: { artist_modal_target: "editButton" } %>
          </div>
        </div>
      </div>
  </div>
<% end %>
